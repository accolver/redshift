{
	"name": "redshift",
	"version": "0.6.1",
	"description": "Decentralized, censorship-resistant secret management platform",
	"type": "module",
	"private": true,
	"workspaces": [
		"packages/*",
		"web"
	],
	"bin": {
		"redshift": "./dist/redshift"
	},
	"scripts": {
		"dev": "bun run cli/src/main.ts",
		"dev:web": "cd web && bun run dev",
		"build": "bun run build:web && bun run build:embeds && bun run build:cli",
		"build:embeds": "bun run cli/scripts/generate-embeds.ts",
		"build:cli": "bun build cli/src/main.ts --compile --outfile dist/redshift",
		"build:cli:all": "bun run build:cli:darwin-arm64 && bun run build:cli:darwin-x64 && bun run build:cli:linux-arm64 && bun run build:cli:linux-x64",
		"build:cli:darwin-arm64": "bun build cli/src/main.ts --compile --target=bun-darwin-arm64 --outfile dist/redshift-darwin-arm64",
		"build:cli:darwin-x64": "bun build cli/src/main.ts --compile --target=bun-darwin-x64 --outfile dist/redshift-darwin-x64",
		"build:cli:linux-arm64": "bun build cli/src/main.ts --compile --target=bun-linux-arm64 --outfile dist/redshift-linux-arm64",
		"build:cli:linux-x64": "bun build cli/src/main.ts --compile --target=bun-linux-x64 --outfile dist/redshift-linux-x64",
		"build:web": "cd web && bun run build",
		"build:all": "bun run build:web && bun run build:embeds && bun run build:cli:all",
		"test": "bun test",
		"test:cli": "cd cli && bun test",
		"test:web": "cd web && bun test",
		"test:crypto": "cd packages/crypto && bun test",
		"test:all": "bun run test:crypto && bun run test:cli && bun run test:web",
		"generate:nsec": "bun run cli/scripts/generate-test-nsec.ts",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"typecheck": "tsc --noEmit",
		"typecheck:web": "cd web && bun run check",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"release:prepare": "bun run test:all && bun run build:all",
		"release:list": "ls -lah dist/",
		"version:bump": "npm version --no-git-tag-version"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@types/bun": "latest",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@redshift/crypto": "workspace:*",
		"exponential-backoff": "^3.1.3",
		"nostr-tools": "^2.18.2",
		"yaml": "^2.8.2"
	},
	"keywords": [
		"secrets",
		"nostr",
		"decentralized",
		"cli",
		"doppler",
		"environment-variables"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	}
}
