{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"security": {
				"noGlobalEval": "error"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noConsoleLog": "off"
			},
			"style": {
				"noNonNullAssertion": "error",
				"useConst": "error",
				"useTemplate": "error"
			},
			"complexity": {
				"noForEach": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			".telos",
			".claude",
			".opencode",
			"web/.svelte-kit",
			"web/build"
		]
	}
}
